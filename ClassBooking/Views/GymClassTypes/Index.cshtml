@using ClassBooking.Authorisation
@model IEnumerable<ClassBooking.Models.GymClassType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Class Types</h4>
@if (User.IsAdmin())
{
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxWaitList)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfTheWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxWaitList)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfTheWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassTime)
        </td>
        <td>
            @if (User.IsAdmin())
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.GymClassTypeId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Details", "Details", new { id = item.GymClassTypeId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.GymClassTypeId }, new { @class = "btn btn-default" })
            }
        </td>
    </tr>
}

</table>
